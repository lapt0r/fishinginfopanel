<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Frame name="FishingInfoPanelFrame" parent="UIParent" movable="true" enableMouse="true" frameStrata="MEDIUM" hidden="true" inherits="BackdropTemplate">
		<Size x="400" y="500"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>

		<Frames>
			<!-- Title Bar -->
			<Frame name="$parentTitleBar" inherits="BackdropTemplate">
				<Size x="380" y="30"/>
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP" x="0" y="-15"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentText" inherits="GameFontNormal" text="Fishing Info Panel">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseDown>
						FishingInfoPanelFrame:StartMoving()
					</OnMouseDown>
					<OnMouseUp>
						FishingInfoPanelFrame:StopMovingOrSizing()
					</OnMouseUp>
				</Scripts>
			</Frame>

			<!-- Zone Info -->
			<Frame name="$parentZoneInfo">
				<Size x="380" y="40"/>
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP" x="0" y="-50"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentZoneName" inherits="GameFontNormalLarge">
							<Anchors>
								<Anchor point="TOP" x="0" y="-5"/>
							</Anchors>
						</FontString>
						<FontString name="$parentSubzoneName" inherits="GameFontNormal">
							<Anchors>
								<Anchor point="TOP" relativeKey="$parent.ZoneName" relativePoint="BOTTOM" x="0" y="-2"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<!-- Toggle Button -->
			<Button name="$parentToggleButton" inherits="UIPanelButtonTemplate">
				<Size x="150" y="25"/>
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP" x="0" y="-110"/>
				</Anchors>
				<Scripts>
					<OnClick>
						FishingInfoPanel:ToggleView()
					</OnClick>
				</Scripts>
			</Button>

			<!-- Scroll Frame for Fish List -->
			<ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Size x="360" y="340"/>
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP" x="-10" y="-145"/>
				</Anchors>
				<ScrollChild>
					<Frame name="$parentScrollChild">
						<Size x="340" y="340"/>
					</Frame>
				</ScrollChild>
			</ScrollFrame>

			<!-- Close Button -->
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
				<Scripts>
					<OnClick>
						FishingInfoPanelFrame:Hide()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
	</Frame>

</Ui>
